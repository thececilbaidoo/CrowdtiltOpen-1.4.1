<meta property='og:type' content="website" />
<meta property='og:site_name' content="<%= @settings.facebook_title.blank? ? @settings.site_name : @settings.facebook_title %>" />
<meta property='fb:app_id' content="<%= @settings.facebook_app_id.present? ? @settings.facebook_app_id : 331145500360318 %>" />

<% params[:controller] == 'campaigns' ? c = @campaign : c = false %>

<% if c %>
  <meta property='og:title' content="<%= c.facebook_title.blank? ? c.name : c.facebook_title %>" />
  <meta property='og:url' content="<%= url_for campaign_home_url(c) %>" />
  <% if !c.facebook_description.blank? %>
    <meta property='og:description' content="<%= c.facebook_description %>" />
  <% elsif !@settings.facebook_description.blank? %>
    <meta property='og:description' content="<%= @settings.facebook_description %>" />
  <% end %>
  <% if c.facebook_image.file? %>
    <meta property='og:image' content='<%= c.facebook_image.url %>' />
  <% elsif @settings.facebook_image.file? %>
    <meta property='og:image' content='<%= @settings.facebook_image.url %>' />
  <% end %>
<% else %>
  <meta property='og:title' content="<%= @settings.facebook_title.blank? ? @settings.site_name : @settings.facebook_title %>" />
  <meta property='og:url' content="<%= root_url %>" />
  <% if !@settings.facebook_description.blank? %>
    <meta property='og:description' content="<%= @settings.facebook_description %>" />
  <% end %>
  <% if @settings.facebook_image.file? %>
    <meta property='og:image' content='<%= @settings.facebook_image.url %>' />
  <% end %>
<% end %>
